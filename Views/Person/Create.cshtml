@model Laboration.ViewModels.PersonCreateViewModel
@using Laboration.Models

<h1>Skapa ny person</h1>
<a class="create-btn" asp-area="" asp-controller="Person" asp-action="Persons">Back</a>

<form asp-action="Create" method="post" enctype="multipart/form-data" class="mt-3">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label class="form-label">Kön</label>

        <div class="form-check">
            <input class="form-check-input" type="radio"
                   asp-for="Person.Gender" value="Female" id="genderFemale" />
            <label class="form-check-label" for="genderFemale">Kvinna</label>
        </div>

        <div class="form-check">
            <input class="form-check-input" type="radio"
                   asp-for="Person.Gender" value="Male" id="genderMale" />
            <label class="form-check-label" for="genderMale">Man</label>
        </div>

        <div class="form-check">
            <input class="form-check-input" type="radio"
                   asp-for="Person.Gender" value="Other" id="genderOther" />
            <label class="form-check-label" for="genderOther">Annat</label>
        </div>

        <span asp-validation-for="Person.Gender" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Person.FirstName" class="form-label">Förnamn</label>
        <input asp-for="Person.FirstName" class="form-control" placeholder="Förnamn" />
        <span asp-validation-for="Person.FirstName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Person.LastName" class="form-label">Efternamn</label>
        <input asp-for="Person.LastName" class="form-control" placeholder="Efternamn" />
        <span asp-validation-for="Person.LastName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Person.Age" class="form-label">Ålder</label>
        <input asp-for="Person.Age" type="number" class="form-control" placeholder="Ålder" />
        <span asp-validation-for="Person.Age" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Profilbild</label>
        <input type="file" asp-for="ImageFile" class="form-control" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>

    <div class="mb-3">
    <label class="form-label">Favoriträtter</label>

    @foreach (var dish in Model.AvailableDishes)
    {
        var isChecked = Model.SelectedDishIds != null &&
                        Model.SelectedDishIds.Contains(dish.DishID);

        <div class="form-check mb-1">
            <input class="form-check-input"
                   type="checkbox"
                   id="dish_@dish.DishID"
                   name="SelectedDishIds"
                   value="@dish.DishID"
                   @(isChecked ? "checked=\"checked\"" : "") />

            <label class="form-check-label" for="dish_@dish.DishID">
                @dish.DishName
            </label>
        </div>
    }

    <span asp-validation-for="SelectedDishIds" class="text-danger"></span>
</div>



    <button type="submit" class="my-btn">Spara</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
