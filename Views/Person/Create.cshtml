@model Laboration.Models.Person

@{
    var dishes = ViewBag.Dishes as IEnumerable<Dish> ?? Enumerable.Empty<Dish>();
}

<h1>Skapa ny person</h1>
<a class="create-btn" asp-area="" asp-controller="Person" asp-action="Persons">Back</a>

<form asp-action="Create" method="post" class="mt-3">

    <div class="mb-3">
    <label class="form-label">Kön</label>

    <div class="form-check">
        <input class="form-check-input" type="radio" asp-for="Gender" value="Female" id="genderFemale" />
        <label class="form-check-label" for="genderFemale">Kvinna</label>
    </div>

    <div class="form-check">
        <input class="form-check-input" type="radio" asp-for="Gender" value="Male" id="genderMale" />
        <label class="form-check-label" for="genderMale">Man</label>
    </div>

    <div class="form-check">
        <input class="form-check-input" type="radio" asp-for="Gender" value="Other" id="genderOther" />
        <label class="form-check-label" for="genderOther">Annat</label>
    </div>

    <div class="mb-3">
        <label asp-for="FirstName" class="form-label">Förnamn</label>
        <input asp-for="FirstName" class="form-control placeholder="Förnamn"" />
    </div>

    <div class="mb-3">
        <label asp-for="LastName" class="form-label">Efternamn</label>
        <input asp-for="LastName" class="form-control placeholder="Efternamn"" />
    </div>

    <div class="mb-3">
        <label asp-for="Age" class="form-label">Ålder</label>
        <input asp-for="Age" type="number" class="form-control placeholder="Ålder"" />
    </div>

    <span asp-validation-for="Gender" class="text-danger"></span>
</div>


    @foreach (var dish in dishes)
{
    <div class="form-check mb-3">
        <input 
            class="form-check-input"
            type="checkbox"
            name="SelectedDishes"
            value="@dish.DishID"
            id="dish_@dish.DishID" />

        <label class="form-check-label" for="dish_@dish.DishID">
            @dish.DishName
        </label>
    </div>
}
    <button type="submit" class="my-btn">Spara</button>
</form>